<%- include('includes/head') %> <%- include('includes/navBar.ejs') %>
<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>
    <div class="col-lg-8 my-3">
      <h1 class="text-center">Register contact</h1>

      <%- include('includes/messages.ejs') %>
      <% if (contact._id) { %>
        <form class="needs-validation" action="/contact/edit/<%= contact._id %> " method="post">
       
      <% } else { %>
        <form class="needs-validation" action="/contact/register" method="post">
      <% }  %>
        <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
        <div class="form-group">
          <label for="exampleInputEmail1">Name</label>
          <input
            type="text"
            class="form-control"
            name="name"
            aria-describedby="name"
            required
            value="<%= contact.name %> "
            
          />
          
        </div>
        <div class="form-group">
          <label for="exampleInputEmail1">Surname</label>
          <input
            type="text"
            class="form-control"
            name="surname"
            aria-describedby="name"
            value="<%= contact.surname %> "
            
          />
          
        </div>
        <div class="form-group">
          <label for="exampleInputEmail1">Email</label>
          <input
            type="email"
            class="form-control"
            name="email"
            aria-describedby="name"
            value="<%= contact.email %> "
            
          />
          
        </div>
        <div class="form-group">
          <label for="exampleInputEmail1">Phone</label>
          <input
            type="tel"
            class="form-control"
            name="phone"
            aria-describedby="name"
            value="<%= contact.phone %> "
            
          />
          
        </div>
        

        <button type="submit" class="btn btn-primary">Save</button>
      </form>
    </div>

    <div class="col-lg-2"></div>
  </div>
</div>

<%- include('includes/footer') %>
